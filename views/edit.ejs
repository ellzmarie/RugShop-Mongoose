  <title>Edit Rug</title>
</head>

<body>
  <div class="container">
    <h1>Edit Rug</h1>
    <form action="/intravenous/<%=product._id%>?_method=PUT" method="POST">

      <label for="name">Name:</label>
      <input type="text" name="name" /><br><br>

      <label for="img">Image URL:</label>
      <input type="img" name="img" /><br><br>

      <label for="type">Description:</label>
      <input type="text" name="description" /><br><br>

      <label for="hp">Price:</label>
      <input type="text" name="price" /><br><br>

      <label for="attack">Quantity:</label>
      <input type="text" name="qty" /><br><br>

      <lablel for="completed">Completed:</lablel>
      <input type="checkbox" name="completed" <% if(product.completed=== true){ %> checked <% } %> />
        <br />


        <input type="submit" class="new-btn"><a href="/intravenous"></a></button>
        <br><br>
    </form>
  </div>
</body>

</html>